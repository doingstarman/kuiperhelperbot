{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node"],
    "lib": ["es2022", "dom"]
  },
  "include": ["src", "api", "scripts"],
  "exclude": ["node_modules", "dist"]
}
